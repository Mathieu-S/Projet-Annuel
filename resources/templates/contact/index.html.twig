{% extends 'base.html.twig' %}

{% block body %}
    <section class="container">
        <div class="row">
            <div class="col-lg-2">
            </div>
            <div class="col-lg-3">
                toto
            </div>
            <div class="col-lg-1">
            </div>
            <div class="col-lg-4">
                <div class="row">
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-12" style="background-color: #003d55; color : white; margin-bottom: 20px;">
                                SERVICE TELEPHONIQUE
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12" style="">
                                <b>Disponible 7jours/7
                                    0866 127 127</b>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="row">
                            <div class="col-lg-12" style="background-color: #003d55; color : white; margin-bottom: 20px;">
                                COORDONNEES
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12" style="">
                                <b>48 rue Camille Desmoulin<br>
                                92 000 Issy Les Moulineaux<br>
                                FRANCE</b>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="row">
                        <div class="col-lg-12" style="background-color: #f05f40; color : white;">
                        ENVOYER UN MAIL
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                        Pour toute question n'hésitez pas à nous contacter :
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-12">
                            <form name="sentMessage" id="contactForm" novalidate>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control" placeholder="Nom" id="name" required data-validation-required-message="Please enter your name.">
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group">
                                            <input type="email" class="form-control" placeholder="Prénom" id="email" required data-validation-required-message="Please enter your email address.">
                                            <p class="help-block text-danger"></p>
                                        </div>
                                        <div class="form-group">
                                            <input type="tel" class="form-control" placeholder="Téléphone" id="phone" required data-validation-required-message="Please enter your phone number.">
                                            <p class="help-block text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <textarea class="form-control" placeholder="Votre message" id="message" required data-validation-required-message="Please enter a message."></textarea>
                                            <p class="help-block text-danger"></p>
                                        </div>
                                    </div>
                                    <div class="clearfix"></div>
                                    <div class="col-lg-12 text-center">
                                        <div id="success"></div>
                                        <button type="submit" class="btn btn-xl">Envoyer</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
        </div>
    </section>
{% endblock %}