{% extends 'base.html.twig' %}

{% block body %}
    <section class="col-md-9 ml-sm-auto col-lg-10 pt-3 px-4">
        <h1>Demande de contact</h1>

        {% form_theme contactForm 'bootstrap_4_layout.html.twig' %}
        {{ form_start(contactForm, {'attr': {'novalidate': 'novalidate'}}) }}

        {{ form_row(contactForm.subject) }}
        {{ form_row(contactForm.message) }}
        {{ form_row(contactForm.receiver) }}

        <button type="submit" class="btn btn-primary">Validate</button>
        {{ form_end(contactForm) }}
    </section>
{% endblock %}
