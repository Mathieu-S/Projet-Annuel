<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('build/global.css') }}">
            <link rel="stylesheet" href="{{ asset('build/backoffice.css') }}">
        {% endblock %}
    </head>
    <body>
        <header>
            {% include 'backoffice/common/_nav.html.twig' %}
        </header>

        <main id="app" class="container-fluid">
            <div class="row">
                {% include 'backoffice/common/_sidebar.html.twig' %}
                {% block body %}{% endblock %}
            </div>
        </main>

        <footer>

        </footer>

        {% block javascripts %}
            <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
