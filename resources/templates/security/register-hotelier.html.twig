{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="row col-md-12">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12" style="border-top: 20px solid #003d55;background-color: white; margin-top:30px; margin-bottom:30px;text-align: center;padding-top: 0px;">
                        <div class="row">
                            <div class="col-md-12">
                                <img style="margin: auto;" class="d-block w-100" src="{{ asset('img/inscriptionProfil.jpg') }}" alt="illustration profil">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-bottom: 20px; margin-top: 20px;">
                                <h4><b>FICHE D'INSCRIPTION</b></h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12" style="margin-top: 20px;text-align: left;padding: 30px;">
                                {% form_theme userForm 'bootstrap_4_layout.html.twig' %}
                                {{ form_start(userForm, {'attr': {'novalidate': 'novalidate'}}) }}

                                {{ form_row(userForm.firstname) }}
                                {{ form_row(userForm.lastname) }}
                                {{ form_row(userForm.email) }}
                                {{ form_row(userForm.siren) }}
                                {{ form_row(userForm.password.first) }}
                                {{ form_row(userForm.password.second) }}

                                <button type="submit" class="btn btn-success">Valider</button>
                                {{ form_end(userForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}