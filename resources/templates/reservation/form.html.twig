{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="row">
            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-11" style="background-color: white;margin-top: 40px;margin-bottom: 40px;">
                        <div class="row">
                            <div class="col-lg-12 divTitleReservationtel">
                                <h1>Complétez <br>votre <br>réservation</h1>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12" style="display: inline-flex; flex-direction:column; padding:20px 20px 0px 20px;">
                                <span><b>Nom de l'hôtel :</b> {{ bedRoom.hotel.name }} </span>
                                <span><b>Contact de l'hôtel :</b> {{ bedRoom.hotel.email }}</span>
                                <span><b>Adresse :</b> {{ bedRoom.hotel.address }}</span>
                                <span><b>Département :</b> {{ bedRoom.hotel.department.name }} </span>
                                <span><b>Ville :</b> {{ bedRoom.hotel.city.name }}</span>
                                <span><b>Code postal :</b> {{ bedRoom.hotel.postalCode.code }}</span><br>
                            </div>
                            <div class="col-lg-12" style="display: inline-flex; flex-direction:column; padding:10px 20px 20px 20px;">
                                <span><b>Prix de la chambre :</b> {{ bedRoom.price ~ '€' }}</span>
                                <span><b>Description de la chambre : </b> <br> <i>{{ bedRoom.description }}</i> </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-1">
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="row">
                    <div class="col-lg-1">
                    </div>
                    <div class="col-lg-11" style="margin-top:40px;margin-bottom: 40px;">
                        <div class="row">
                            <div class="col-lg-12" style="padding:0px;">
                                <img class="d-block w-100" height="225px" src="{{ asset('img/reservation_calendrier.jpg') }}" alt="Photographie d'aquitaine">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12" style="background-color: white;padding: 20px;">
                                <h6><b>EN SELECTIONNANT UNE DATE DE RESERVATION :</b></h6>
                                {% form_theme reservationForm 'bootstrap_4_layout.html.twig' %}
                                {{ form_start(reservationForm, {'attr': {'novalidate': 'novalidate'}}) }}
                                <br>
                                <b>{{ form_label(reservationForm.startDate) }}</b>
                                {{ form_widget(reservationForm.startDate) }}
                                <br>
                                <b>{{ form_label(reservationForm.finalDate) }}</b>
                                {{ form_widget(reservationForm.finalDate) }}
                                <br>
                                <b>{{ form_label(reservationForm.nbOfPersons) }}</b>
                                {{ form_widget(reservationForm.nbOfPersons) }}
                                <button type="submit" class="btn btn-success" style="text-align: right;margin-top: 20px;">Valider</button>
                                {{ form_end(reservationForm) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-2"></div>
</div>

{% endblock %}
